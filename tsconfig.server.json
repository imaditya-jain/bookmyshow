{
  "compilerOptions": {
    "outDir": "dist-server",
    "rootDir": "src/server",

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "strict": true,

    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*"]
}
