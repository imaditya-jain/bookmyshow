{
  "compilerOptions": {
    "outDir": "dist-server",
    "rootDir": "src/server",

    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,

    "esModuleInterop": true,
    "strict": true,

    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*"]
}
